@using Entities.Concrete
@{
    ViewData["Title"] = "Get Products";
    List<Product> productList = new List<Product>();
}

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">İsim</th>
                <th scope="col">Alış Fiyatı</th>
                <th scope="col">Satış Fiyatı</th>
                <th scope="col">Açıklama</th>
                <th scope="col">Stok</th>
                <th scope="col">Kargo Şirketi</th>
            </tr>
        </thead>
        <tbody>
            <tr>

                @{
                    int j = 1;
                    foreach (var item in productList)
                    {
                        <td>@j</td>
                        <td>@item.Name</td>
                        <td>@item.PurchasePrice</td>
                        <td>@item.SellingPrice</td>
                        <td>@item.Description</td>
                        <td>@item.StockAmount</td>
                        <td>@item.ShippingDetail</td>
                        j++;
                    }
                }

            </tr>
        </tbody>
    </table>
</div>


@section Scripts{
    <script>
        $.ajax({
            url: "/Home/GetProducts",
            method: "GET",
            success: function(data) {
                console.log(data)
                for (var i = 0; i < data.length; i++) {
                    $('tbody').append(`<tr> <td>${(i + 1)}</td> <td>${data[i].name}</td> <td>${data[i].purchasePrice}</td> <td>${data[i].sellingPrice}</td> <td>${data[i].description}</td> <td>${data[i].stockAmount}</td> <td>${data[i].shippingDetail}</td></tr>`)
                }
            }
        })
    </script>
}



